<%= form_with(model: member, local: true, html: { multipart: true }) do |form| %>
  <% if member.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>
      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user %>
    <%= form.hidden_field :user_id, value: current_user.id %>
  <% end %>

  <div>
    <strong><%= form.label :name %></strong>
    <%= form.text_field :name, class:"form-control" %>
  </div><br/>

  <div>
    <strong><%= form.label :id_number %></strong>
    <%= form.text_field :id_number, class:"form-control" %>
  </div><br/>

  <div>
    <strong><%= form.label :monthly_contribution %></strong>
    <%= form.number_field :monthly_contribution, class: "form-control" %>
  </div><br/>

  <div>
    <strong><%= form.label :phone_number %></strong>
    <%= form.text_field :phone_number, class:"form-control" %>
  </div><br/>

  <div>
    <strong><%= form.label :email %></strong>
    <%= form.text_field :email, class:"form-control" %>
  </div><br/>

  <div class="col-md-2">
    <strong><%= form.label :join_date %></strong>
    <%= form.date_field :join_date, class:"form-control" %>
  </div><br/>

  <div class="form-check form-switch mb-3">
    <%= form.check_box :status, class: "form-check-input", id: "statusSwitch" %>
    <%= form.label :status, "Active Member?", class: "form-check-label", for: "statusSwitch" %>
  </div><br/>

  <div>
    <strong><%= form.label :next_of_kin_name %></strong>
    <%= form.text_field :next_of_kin_name, class:"form-control" %>
  </div><br/>

  <div>
    <strong><%= form.label :next_of_kin_relationship %></strong>
    <%= form.text_field :next_of_kin_relationship, class:"form-control" %>
  </div><br/>

  <div>
    <strong><%= form.label :next_of_kin_contact %></strong>
    <%= form.text_field :next_of_kin_contact, class:"form-control" %>
  </div><br/>

  <div>
    <strong><%= form.label :passport_photo %></strong>
    <%= form.file_field :passport_photo, class: "form-control" %>
  </div><br/>

  <div>
    <%= form.submit nil, class: "btn btn-success btn-sm" %>
  </div>
<% end %>
