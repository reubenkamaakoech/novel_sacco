<div class="container">
<p>
  <strong>Site Name:</strong>
  <%= @site.name %>
</p>

<p>
  <strong>Interior Area:</strong>
  <%= @site.interior_area %> sq. meters
</p>

<p>
  <strong>Exterior Area:</strong>
  <%= @site.exterior_area %> sq. meters
</p>

<p>
  <strong>Labour Cost:</strong>
  <%= number_to_currency(@site.labour_cost, unit:"Ksh ") %>  
</p>

<p>
  <strong>Status:</strong>
  <%= @site.status %>
</p>
 
  <div>
  <%= link_to "Edit this site", edit_site_path(@site) %> |
  <%= link_to "Back to sites", sites_path %>

  <%= button_to "Destroy this site", @site, method: :delete %>
</div>
</div>
