<div class="container">
  
<%= form_with(model: site) do |form| %>
  <% if site.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
        <% site.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div>
    <%= form.label :interior_area, style: "display: block" %>
    <%= form.number_field :interior_area, class:"form-control" %>
  </div>

  <div>
    <%= form.label :exterior_area, style: "display: block" %>
    <%= form.number_field :exterior_area, class:"form-control" %>
  </div>

  <div>
    <%= form.label :labour_cost, style: "display: block" %>
    <%= form.number_field :labour_cost, class:"form-control" %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.checkbox :status %>
    <%= form.label :status, "Active?" %>
  </div>

  <div>
    <%= form.submit nil, class:"btn btn-success btn-sm" %>
  </div>
<% end %>
</div>
