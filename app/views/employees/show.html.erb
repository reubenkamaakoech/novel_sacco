<<div class="container">

<% content_for :title, "Employee Details" %>

<div class="card mb-3" style="max-width: 400px;">
  <div class="card-header bg-primary text-white">
    Employee Bio
  </div>

  <div class="card-body">
    <P class="card-text">
      <strong>Name:</strong> <%= @employee.full_name %><br>
      <strong>Phone:</strong> <%= @employee.phone %><br>
      <strong>Id Card:</strong> <%= @employee.national_id %><br>
      <strong>Status:</strong> <%= @employee.status? ? "Active" : "Inactive" %>
    </p>
  </div>
</div>

<div>
  <%= link_to "Edit", edit_employee_path(@employee), class:"btn btn-warning btn-sm" %> |
  <%= link_to "Back", employees_path, class:"btn btn-primary btn-sm" %>
</div>

<div class="mt-3">
  <%= button_to "Delete", @employee, method: :delete, data: { confirm: "Are you sure you want to delete this site?" }, class: "btn btn-danger btn-sm" %>
</div>

<h4><i>Attendance for <%= @employee.full_name %></i></h4>

<% if @attendances.empty? %>
  <p class="text-red">No attendance records found for <%= @employee.full_name %>.</p>
<% end %>

<ul>
  <% @attendances.each do |att| %>
    <li><%= att.work_date.strftime("%d-%b-%Y") %>: <%= att.site&.name || "No Site" %></li>
  <% end %>
</ul>
</div>
