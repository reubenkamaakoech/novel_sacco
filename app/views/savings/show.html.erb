<div class="container">
<p>
  <strong>Member:</strong>
  <%= @saving.member.name %>
</p>
<p>
  <strong>Amount:</strong>
  <%= number_to_currency(@saving.amount, unit: "Ksh ") %>
</p>
<p>
  <strong>Deposit Type:</strong>
  <%= @saving.deposit_type %>
</p>
<p>
  <strong>Month:</strong>
  <%= @saving.month %>
</p>
<p>
  <strong>Added By:</strong>
  <%= @saving.user.username %>
</p>

<div>
  <%= link_to "Edit this saving", edit_saving_path(@saving), class:"btn btn-warning btn-sm" %> |
  <%= link_to "Back to savings", savings_path,class:"btn btn-primary btn-sm" %>
</div>

<div class="mt-3">
  <%= button_to "Delete", @saving, method: :delete, data: { confirm: "Are you sure you want to delete this site?" }, class: "btn btn-danger btn-sm" %>
</div>
</div>
