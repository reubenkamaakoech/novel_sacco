<div class="container">

<% content_for :title, "Advance Details" %>

<div class="card mb-3" style="max-width: 400px;">
  <div class="card-header bg-primary text-white">
    Advance Details
  </div>

 <div class="card-body">
    <P class="card-text">
      <strong>Name:</strong> <%= @advance.employee.full_name %><br>
      <strong>Amount:</strong> <%= number_to_currency(@advance.amount, unit: "Ksh ") %><br>
      <strong>Reason:</strong> <%= @advance.reason %><br>
      <strong>Date:</strong> <%= @advance.date.strftime("%Y-%m-%d") %><br>
    </p>
  </div>
</div>

<div>
  <%= link_to "Edit", edit_advance_path(@advance), class:"btn btn-warning btn-sm" %> |
  <%= link_to "Back", advances_path, class:"btn btn-primary btn-sm" %>
</div>

<div class="mt-3">
  <%= button_to "Delete", @advance, method: :delete, data: { confirm: "Are you sure you want to delete this site?" }, class: "btn btn-danger btn-sm" %>
</div>
</div> 
