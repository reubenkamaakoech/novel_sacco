<%= form_with(model: advance) do |form| %>
  <% if advance.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(advance.errors.count, "error") %> prohibited this advance from being saved:</h2>

      <ul>
        <% advance.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :employee_id, style: "display: block" %>
    <%= form.collection_select :employee_id, Employee.all, :id, :full_name, {prompt:"-Select-"} %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
