<% content_for :title, "Users" %>

<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th>Name</th>
      <th>Status</th>
      <th>Role</th>
      <th>Access</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td>
          <%= form_with url: toggle_status_user_path(user), method: :patch, local: true do %>
            <%= hidden_field_tag :status, false %>
             <%= check_box_tag :status, true, user.status, onchange: 'this.form.submit();' %>
            <% end %>
        </td>
        <td><%= user.role %></td>
        <td>
          <%= button_to toggle_access_user_path(user), method: :patch, remote: true, form: { data: { turbo_stream: true } }, class: "btn btn-sm #{user.access_granted ? 'btn-success' : 'btn-danger'}" do %>
            <%= user.access_granted ? 'Granted' : 'Revoked' %>
          <% end %>
        </td>
        <td>
          <%= link_to "Edit", edit_user_path(user), class: "btn btn-sm btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>



